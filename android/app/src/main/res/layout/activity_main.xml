<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next GenAI"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#1976d2"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Smart Call Screen &amp; Receptionist Dialer"
            android:textSize="16sp"
            android:textColor="#666"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Webhook Agent Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Webhook Agent"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_webhook_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: Not Initialized"
                    android:textColor="#d32f2f"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_initialize_webhooks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Initialize Webhook Agent"
                    android:background="#1976d2"
                    android:textColor="white"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_webhook_management"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage Webhooks"
                    android:background="#388e3c"
                    android:textColor="white"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_refresh_webhooks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Refresh Status"
                    android:background="#616161"
                    android:textColor="white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Web Browser Integration -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cloud Dashboard"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:background="#e3f2fd" />

                <WebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Features Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_call_screen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Call Screen"
                android:background="#ff9800"
                android:textColor="white"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AI Processing"
                android:background="#9c27b0"
                android:textColor="white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CBMS Integration"
                android:background="#795548"
                android:textColor="white"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Receptionist"
                android:background="#607d8b"
                android:textColor="white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>