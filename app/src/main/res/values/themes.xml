<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.NextGenAI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_variant</item>
        <item name="colorSecondary">@color/secondary_teal</item>
        <item name="colorAccent">@color/accent_green</item>
        <item name="colorError">@color/error_red</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <!-- Enable edge-to-edge -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
    
    <!-- Call Screen Theme -->
    <style name="Theme.NextGenAI.CallScreen">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.NextGenAI.Splash">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/primary_blue</item>
    </style>
</resources>