{
  "name": "next-genai-monorepo",
  "version": "1.0.0",
  "description": "Smart call screen and receptionist dialer with AI models and CBMS - Web and Mobile applications",
  "private": true,
  "workspaces": [
    "web",
    "mobile", 
    "shared",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:backend\"",
    "dev:web": "cd web && npm run dev",
    "dev:mobile": "cd mobile && npm start",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:web",
    "build:web": "cd web && npm run build",
    "build:mobile": "cd mobile && npm run build:android",
    "build:shared": "cd shared && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:shared && npm run test:backend && npm run test:web",
    "test:web": "cd web && npm test",
    "test:mobile": "cd mobile && npm test",
    "test:shared": "cd shared && npm test",
    "test:backend": "cd backend && npm test",
    "lint": "npm run lint:web && npm run lint:mobile && npm run lint:shared && npm run lint:backend",
    "lint:web": "cd web && npm run lint",
    "lint:mobile": "cd mobile && npm run lint",
    "lint:shared": "cd shared && npm run lint",
    "lint:backend": "cd backend && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}